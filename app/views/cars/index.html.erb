<h1>My Cars</h1>

<div>
	<%= link_to 'Add New Car', new_car_path, class: "btn btn-primary" %>
</div>

<% if user_signed_in? %>
	<% @cars.each do |car| %>
	<div class="col-md-4">
	<div class="card">
	  <%= image_tag car.image.url(:medium) %>

	  <div class="card-block">
	    <h4 class="card-title"><%=link_to car.year, car_path(car)%></h4>
	    <p class="card-text"><%=car.make%> <%=car.model%></p>
	  </div>
	  <div class="card-block">
	    <a href="#" class="card-link">Card link</a>
	    <a href="#" class="card-link">Another link</a>
	  </div>
	</div>
	</div>
	<% end %>
<% else %>
	<%= @errors %>
<% end %>
