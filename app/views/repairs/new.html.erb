<h1>New Repair</h1>
<% if @errors %>
  <ul>
    <% @errors.each do |error| %>
	<li><%= error %></li>
	<% end %>
  </ul>
<% end %>

<%= form_for @repair, url: car_issue_repairs_path do |f| %>
<p>
  <%= f.label :title%>:
  <%= f.text_field :title %><br />
</p>
<p>
  <%= f.label :mileage%>
  <%= f.text_field :mileage %>
</p>
<p>
<p>
  <%= f.label :date_completed %>
  <%= f.date_field :date_completed %>
</p>
<p>
  <%= f.label :description%>:
  <%= f.text_area :description %><br />
</p>
<%= f.hidden_field :issue_id, :value => @issue.id %>

<%= f.submit %>
<% end %>
